{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "http": {
        "Url": "http://+:80",
        "Protocols": "Http1"
      },
      "https": {
        "Url": "https://+:443",
        "Protocols": "Http1"
      }
    }
  },
  "LettuceEncrypt": {
    "AcceptTermsOfService": true,
    "DomainNames": [
      "localhost"
    ],
    "EmailAddress": "it@avalanche.com"
  },
  "Identity": {
    "ClientIntrospection": {
      "Issuer": "http://identity.avalanche:5678",
      "Audiences": [
        "avalanche"
      ],
      "ClientId": "avalanche",
      "ClientSecret": "avalanche"
    },
    "ClientRegistration": {
      "Issuer": "http://identity.avalanche:5678",
      "ClientId": "avalanche",
      "ClientSecret": "avalanche"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "merchant": {
        "ClusterId": "merchant",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/merchant"
        }
      },
      "ticket": {
        "ClusterId": "ticket",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/ticket"
        }
      },
      "auth": {
        "ClusterId": "auth",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/auth"
        }
      }
    },
    "Clusters": {
      "merchant": {
        "Destinations": {
          "merchant/destination1": {
            "Address": "http://merchant.avalanche:8001"
          }
        }
      },
      "ticket": {
        "Destinations": {
          "ticket/destination1": {
            "Address": "http://ticket.avalanche:8002"
          }
        }
      },
      "auth": {
        "Destinations": {
          "auth/destination1": {
            "Address": "http://auth.avalanche:8003"
          }
        }
      }
    }
  }
}